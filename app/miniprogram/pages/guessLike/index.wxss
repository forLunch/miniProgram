/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.module-container{
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  padding-left: 32rpx;
}
.module-container .module{
  width: 327rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  float: left;
  margin: 32rpx 32rpx 0 0;
  border-radius: 10%;
  font-family: PingFangSC-Medium,Tahoma,"Lucida Grande",Verdana,"Microsoft Yahei",STXihei,hei;
}
.module-container .module.random{
   background: -webkit-linear-gradient(left,#ffbc49,#ffd252);
}
.module-container .module.random{
   background: -webkit-linear-gradient(left,#ffbc49,#ffd252);
}
.module-container .module.rank{
  background: -webkit-linear-gradient(left,#fa5956,#fb8650);
}

.module-container .module.everyone{
  background: -webkit-linear-gradient(left,#4b8fed,#53bced);
}

.module-container .module.clockin{
  background: -webkit-linear-gradient(left,#34c2aa,#6cd557);
}

.module .title{
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;

}

